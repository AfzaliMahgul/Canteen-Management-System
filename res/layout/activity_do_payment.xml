<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
    android:background="@color/background"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.rty.quickmeal.modules.DoPayment">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="140dp"
            android:layout_height="443dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:orientation="vertical"
            tools:ignore="UnknownId"
            android:layout_above="@+id/proceed">

            <RadioButton
                android:id="@+id/debit"
                android:layout_width="110dp"
                android:layout_height="74dp"
                android:text="Debit Card" />

            <RadioButton
                android:id="@+id/credit"
                android:layout_width="115dp"
                android:layout_height="75dp"
                android:layout_alignLeft="@+id/radioGroup"
                android:layout_alignStart="@+id/radioGroup"
                android:layout_below="@+id/radioGroup"
                android:text="Credit Card"
                android:layout_weight="0.06" />

            <RadioButton
                android:id="@+id/freecharge"
                android:layout_width="114dp"
                android:layout_height="73dp"
                android:text="Freecharge" />

            <RadioButton
                android:id="@+id/mobikwick"
                android:layout_width="114dp"
                android:layout_height="78dp"
                android:text="Mobikwick" />

            <RadioButton
                android:id="@+id/paytm"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.27"
                android:text="Paytm" />
        </RadioGroup>

    <EditText
            android:id="@+id/dc"
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="CVV"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:layout_below="@+id/dn"
            android:layout_alignLeft="@+id/dn"
            android:layout_alignStart="@+id/dn" />

        <EditText
            android:id="@+id/dd"
            android:layout_width="91dp"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/dc"
            android:layout_toRightOf="@+id/dc"
            android:layout_toEndOf="@+id/dc" />

        <EditText
            android:id="@+id/cn"
            android:layout_width="212dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="Card Number"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:layout_below="@+id/dc"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/cc"
            android:layout_alignStart="@+id/cc" />

        <EditText
            android:id="@+id/cc"
            android:layout_width="91dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="CVV"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:layout_below="@+id/cn"
            android:layout_alignLeft="@+id/dc"
            android:layout_alignStart="@+id/dc" />

    <EditText
            android:id="@+id/cd"
            android:layout_width="91dp"
            android:layout_height="39dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/cc"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/dn"
        android:layout_width="212dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mn"
        android:layout_alignStart="@+id/mn" />


    <Button
        android:id="@+id/proceed"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="PROCEED"
        android:textSize="16sp"
        android:textColor="@color/whitetext"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/dd"
        android:layout_alignEnd="@+id/dd" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textSize="16sp"
        android:textColor="@color/whitetext"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/radioGroup"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fn"
        android:visibility="invisible"
        android:hint="Mobile number"
        android:layout_below="@+id/cc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:id="@+id/mn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile Contact"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_below="@+id/fn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp" />

    <EditText
        android:id="@+id/pn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_below="@+id/mn"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="31dp" />


</RelativeLayout>
